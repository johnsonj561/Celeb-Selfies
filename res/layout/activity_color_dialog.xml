<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/celebselfies_background1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.putty.celebselfie_v2.ColorDialog" >
    
    <Button
    	    android:id="@+id/redButton"
    	    android:background="@drawable/redbutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_centerHorizontal="true"
    	    android:layout_alignParentTop="true"
    	    android:layout_marginTop="10dp"
    	    />

    	<Button
    	    android:id="@+id/yellowButton"
    	    android:background="@drawable/yellowbutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_below="@id/redButton"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="10dp"/>
    	
    	<Button
    	    android:id="@+id/blackButton"
    	    android:background="@drawable/blackbutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_below="@id/yellowButton"
    	    android:layout_marginTop="10dp"
    	    android:layout_centerHorizontal="true"/>
    
  	<Button
    	    android:id="@+id/blueButton"
    	    android:background="@drawable/bluebutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_alignParentTop="true"
    	    android:layout_marginTop="10dp"
    	    android:layout_toLeftOf="@id/redButton"
    	    android:layout_toStartOf="@id/redButton"
    	    android:layout_marginEnd="10dp"
    	    android:layout_marginRight="10dp"/>
    	    
    	<Button
    	    android:id="@+id/greenButton"
    	    android:background="@drawable/greenbutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_below="@id/blueButton"
    	    android:layout_marginTop="10dp"
    	    android:layout_toLeftOf="@id/yellowButton"
    	    android:layout_toStartOf="@id/yellowButton"
    	    android:layout_marginRight="10dp"
    	    android:layout_marginEnd="10dp"/>
    	
   		<Button
    	    android:id="@+id/purpleButton"
    	    android:background="@drawable/purplebutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_below="@id/greenButton"
    	    android:layout_marginTop="10dp"
    	    android:layout_toLeftOf="@id/blackButton"
    	    android:layout_toStartOf="@id/blackButton"
    	    android:layout_marginEnd="10dp"
    	    android:layout_marginRight="10dp"/>
    	
    	<Button
    	    android:id="@+id/orangeButton"
    	    android:background="@drawable/orangebutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_alignParentTop="true"
    	    android:layout_marginTop="10dp"
    	    android:layout_toRightOf="@id/redButton"
    	    android:layout_toEndOf="@id/redButton"
    	    android:layout_marginStart="10dp"
    	    android:layout_marginLeft="10dp"/>
    	    
    	<Button
    	    android:id="@+id/pinkButton"
    	    android:background="@drawable/pinkbutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_below="@id/orangeButton"
    	    android:layout_marginTop="10dp"
    	    android:layout_toRightOf="@id/yellowButton"
    	    android:layout_toEndOf="@id/yellowButton"
    	    android:layout_marginLeft="10dp"
    	    android:layout_marginStart="10dp"/>
    	
   		<Button
    	    android:id="@+id/silverButton"
    	    android:background="@drawable/silverbutton_menu"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_below="@id/pinkButton"
    	    android:layout_marginTop="10dp"
    	    android:layout_toRightOf="@id/blackButton"
    	    android:layout_toEndOf="@id/blackButton"
    	    android:layout_marginStart="10dp"
    	    android:layout_marginLeft="10dp"/>


</RelativeLayout>
